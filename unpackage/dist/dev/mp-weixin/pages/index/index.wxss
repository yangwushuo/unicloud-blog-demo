.home-wrapper {
  position: relative;
}
.home-wrapper .skeleton-wrapper {
  box-sizing: border-box;
  padding: 20rpx;
}
.home-wrapper .skeleton-wrapper .skeleton {
  margin: 25rpx 0;
}
.home-wrapper .content-wrapper blog-box:not(:last-child)::after {
  content: '';
  display: inline-block;
  height: 7rpx;
  width: 100%;
  background-color: #f3f4f7;
}
.home-wrapper .btn-wrapper {
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
}
.home-wrapper .btn-wrapper .edit {
  width: 90rpx;
  height: 90rpx;
  background-color: #ff7b00;
  border-radius: 50%;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  z-index: 999;
  text-align: center;
}
.home-wrapper .btn-wrapper .edit #addArtIcon {
  font-size: 50rpx;
  color: #f8f8f8;
  line-height: 90rpx;
}

